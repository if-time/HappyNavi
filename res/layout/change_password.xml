<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
> 

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

      <RelativeLayout        
    	android:id="@+id/titlebar"
    	android:layout_width="match_parent"     
    	android:layout_height="wrap_content"  
    	android:layout_alignParentTop="true"
	    android:background="@drawable/title_bar"
	    android:orientation="horizontal"   
	     >
		<LinearLayout
	    	android:layout_width="40dip"
	        android:layout_height="40dip"
	        android:layout_gravity="center"
	    	android:id="@+id/changepwd_back"
	   		android:orientation="horizontal" >
	    	<ImageView	 
	    	    android:layout_width="10dip"
	        	android:layout_height="16dip"
	        	android:layout_gravity="center"
	        	android:layout_marginLeft="15dip"
	        	android:background="@drawable/back" />
		</LinearLayout>
	   
	    <TextView
	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/change_password"
	        android:textColor="@android:color/white"
	        android:textSize="18dp" 
	        android:layout_centerInParent="true"
	        />	
		
	</RelativeLayout>

  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >
           <TextView
            android:id="@+id/tv_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
         
         
            android:text="@string/oldpwd_div"
            android:textColor="#353535"
            android:textSize="18dp" />  
           <EditText
            android:id="@+id/psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
           
            android:background="@drawable/edittext_login"
            android:hint="@string/oldpwd"
           
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="18dp" />

       
    </LinearLayout>
    


  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
           <TextView
            android:id="@+id/tv_password2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
              android:layout_weight="1"
         
            android:text="@string/newpwd_div"
            android:textColor="#353535"
            android:textSize="18dp" />
        
        
        <EditText
            android:id="@+id/psw2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           
            android:background="@drawable/edittext_login"
            android:hint="@string/input_pwd"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
             android:layout_weight="2"
            android:textSize="18dp" />

     
    </LinearLayout>

    
    
    
    
   
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
        
        
        
        <TextView
            android:id="@+id/tv_password23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_weight="1"
       
            android:text="@string/confirm_newpwd"
            android:textColor="#353535"
            android:textSize="18dp" />
        
        
        <EditText
            android:id="@+id/psw3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_weight="2"
            android:background="@drawable/edittext_login"
            android:hint="@string/input_pwd_again"
            android:password="true"
            android:textColorHint="#DDDDDD"
            android:textSize="18dp" />

    </LinearLayout>
    
    
    



    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_register_bg"
        android:onClick="submit"
        android:gravity="center"
        android:text="@string/savechange"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
</LinearLayout>

</ScrollView>
